<?xml version="1.0" encoding="UTF-8"?>
<!-- status: log4j2 log level, monitorInterval="30" could let auto reload 
	the config -->
<Configuration status="OFF">
	<Properties>
		<Property name="LOG_HOME">/var/log/SageAssistant</Property>
		<Property name="patternConsole">%d{HH:mm:ss.SSS} [%-5level] [%c{36}] %msg%n</Property>
		<Property name="patternFile">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%c{36}] %msg%n</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout>
				<Pattern>${patternConsole}</Pattern>
			</PatternLayout>
		</Console>
		<RollingFile name="RollingFile" fileName="${LOG_HOME}/sageassistant.log" filePattern="${LOG_HOME}/sageassistant.%d{yyyy-MM-dd}.log" append="true">
			<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout>
				<Pattern>${patternFile}</Pattern>
			</PatternLayout>

			<Policies>
				<!-- Apply policies every 1 day -->
				<TimeBasedTriggeringPolicy modulate="true" interval="1" />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${baseLogDir}" maxDepth="1">
					<IfFileName glob="*.log" />
					<IfLastModified age="15d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile" />
		</Root>
		<Logger name="sageassistant" level="INFO" additivity="false">
			<AppenderRef ref="RollingFile" />
		</Logger>
		<Logger name="com.zaxxer" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile" />
		</Logger>
		<Logger name="org.mybatis" level="INFO" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org.hibernate" level="INFO" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org.springframework" level="INFO" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.crystaldecisions.reports.common" level="ERROR" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.crystaldecisions12.reports.common" level="ERROR" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.businessobjects" level="ERROR" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.businessobjects.reports.reportconverter.v12.V12Converter" level="ERROR" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
	</Loggers>
</Configuration>