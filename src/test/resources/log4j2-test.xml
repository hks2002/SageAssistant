<?xml version="1.0" encoding="UTF-8"?>
<!--
status: log4j2 log level, monitorInterval="30" could let auto reload
the config
-->
<Configuration status="OFF">
	<Properties>
		<Property name="patternConsole">
			%d{HH:mm:ss.SSS} %highlight{[%-5level]} [%c{36}] %msg%n
		</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout disableAnsi="false" noConsoleNoAnsi="false">
				<Pattern>
					${patternConsole}
				</Pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console" />
		</Root>
		
		<!-- this app log -->
		<Logger name="com.da.sage.assistant" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>

	</Loggers>
</Configuration>
